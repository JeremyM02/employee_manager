mixin employeeForm(url, employee, jobtitles, stateslist)

    form(action=url method='post')
        label(for='firstname') First Name:
        input(id='firstname' name='firstname' type=employee.firstname)

        label(for='lastname') Last Name:
        input(id='lastname' name='lastname' type=employee.lastname)

        label(for='jobtitle') Job Title:
        select(id='jobtitle' name='jobtitle')
            each title in jobtitles
                option(value=title selected=employee.jobtitle===title) #{title}

        div.address
            div.streetline
                div.streetline1
                    label(for='streetline1') Street Line 1:
                    input(id='streetline1' name='streetline1' type=employee.streetline1)

                div.streetline2
                    label(for='streetline2') Street Line 2:
                    input(id='streetline2' name='streetline2' type=employee.streetline2)
            div.territory
                div.city
                    label(for='city') City:
                    input(id='city' name='city' type=employee.city)

                div.state
                    label(for='state') State:
                    select(id='state' name='state')
                        each state in stateslist
                            option(value=state selected=employee.state===state) #{state}

                div.zip
                    label(for='zip') Zip:
                    input(id='zip' name='zip' type=employee.zip)

        div.personal-info-row
            div.phone
                label(for='phonenumber') Phonenumber:
                input(id='phonenumber' name='phonenumber' type=employee.phonenumber)

            div.year
                label(for='yearhired') Year Hired:
                input(id='yearhired' name='yearhired' type=employee.yearhired)

        button(type='submit') Submit


